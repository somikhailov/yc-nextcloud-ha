global
    maxconn 100

defaults
    log global
    mode tcp
    retries 2
    timeout client 30m
    timeout connect 4s
    timeout server 30m
    timeout check 5s

listen patroni
    bind *:5432
    option httpchk
    http-check expect status 200
    default-server inter 3s fall 3 rise 2 on-marked-down shutdown-sessions
    
    {% for server in backend_servers %}
    server pg_{{ server }} {{ server }}:5432 maxconn 100 check port 8008
    {% endfor %}
