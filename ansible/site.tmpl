---
- name: nginx
  hosts: app_proxy
  become: true
  vars:
    domain_name: ${ domain_name }
    backend_servers: "{{ groups['app'] | map('extract', hostvars, ['ansible_host']) }}"    
  roles:
    - nginx
  tags: nginx

- name: Nextcloud
  hosts: app
  become: true

  roles:
    - nextcloud
  tags: nextcloud